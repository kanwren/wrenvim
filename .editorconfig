[*]
end_of_line = lf
insert_final_newline = true

[*.nix]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.{html,css,js,ts}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.tf]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[justfile]
indent_style = space
indent_size = 4
